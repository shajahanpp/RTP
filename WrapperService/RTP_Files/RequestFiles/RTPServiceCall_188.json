{
  "request" : {
    "method" : "POST",
    "header" : [ {
      "Content-Type" : "x-www-form-urlencoded"
    }, {
      "xform-grant_type" : "password"
    }, {
      "xform-scope" : "write"
    }, {
      "xform-username" : "$username"
    }, {
      "xform-password" : "$password"
    }, {
      "xform-client_assertion_type" : "jwt-bearer"
    }, {
      "xform-client_assertion" : "$clientAssertion"
    } ],
    "body" : { },
    "url" : "#base_url/#api_base/oauth/token"
  }
}